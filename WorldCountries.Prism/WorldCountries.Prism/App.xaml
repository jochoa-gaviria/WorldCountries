<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.DryIoc;assembly=Prism.DryIoc.Forms"
             x:Class="WorldCountries.Prism.App">
    <Application.Resources>

        <!-- Application resource dictionary -->
        <x:String x:Key="UrlAPI">https://restcountries.eu</x:String>

        <!-- Colors -->
        <Color x:Key="colorBackgroud">#65A3C5</Color>
        <Color x:Key="colorPrimary">#3E6E8C</Color>
        <Color x:Key="colorSecondary">#CED7F2</Color>
        <Color x:Key="colorDanger">#F2B9AC</Color>
        <Color x:Key="colorAccent">#F1F1F2</Color> 
        <Color x:Key="colorFont">#3E6E8C</Color>
        <Color x:Key="colorFontInverse">#65A3C5</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource colorFont}" />
        </Style>

    </Application.Resources>
</prism:PrismApplication>